<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_dashboard">

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.capstone.bodyareanetwork.ui.dashboard.DashboardFragment"
        android:label="Body Area Network Overview"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_status"
        android:name="com.capstone.bodyareanetwork.ui.status.StatusFragment"
        android:label="My Health Status"
        tools:layout="@layout/fragment_status" />


    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.capstone.bodyareanetwork.ui.profile.ProfileFragment"
        android:label="My Profile"
        tools:layout="@layout/fragment_profile" />
</navigation>